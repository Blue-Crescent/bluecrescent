<launch>
  <rosparam>
    bluecrescent:
      # Publish all joint states -----------------------------------
      joint_state_controller:
        type: joint_state_controller/JointStateController
        publish_rate: 10.0
  
      # Position Controllers ---------------------------------------
      joint_position_controller:
        type: position_controllers/JointTrajectoryController
        pid: {p: 10.0, i: 0.0, d: 0.0}
        joints: 
          - head_roll
          - head_yaw

      # Position Controllers ---------------------------------------
      joint_position_controller_R:
        type: position_controllers/JointTrajectoryController
        pid: {p: 10.0, i: 0.0, d: 0.0}
        joints: 
          - arm_shoulder_right_roll
          - arm_shoulder_right_pitch
          - arm_elbow_right_yaw
          - arm_elbow_right_roll
          - arm_wrist_right_yaw
      ## Position Controllers ---------------------------------------
      #joint_position_controller:
      #  type: position_controllers/JointTrajectoryController
      #  pid: {p: 10.0, i: 0.0, d: 0.0}
      #  joints: 
      #    - arm_shoulder_left_roll
      #    - arm_shoulder_left_pitch
      #    - arm_elbow_left_yaw
      #    - arm_elbow_left_roll
      #    - arm_wrist_left_yaw
  </rosparam>

  <rosparam>
    robot_hardware:
     - bluecrescent_hw_head
     - bluecrescent_hw_rarm
    bluecrescent_hw_head:
      type: bluecrescent_control/BlueCrescent_head
      joints:
        - head_roll
        - head_yaw
    bluecrescent_hw_rarm:
      type: bluecrescent_control/BlueCrescent_rarm
      joints:
        - arm_shoulder_right_roll
        - arm_shoulder_right_pitch
        - arm_elbow_right_yaw
        - arm_elbow_right_roll
        - arm_wrist_right_yaw
  </rosparam>
  
  <!--test test-name="bluecrescent_control" pkg="bluecrescent_control" type="bluecrescent_control"/-->

  <node pkg="bluecrescent_control" type="bluecrescent_app" name="bluecrescent_control"
        output="screen"/>
  <!--node name="bluecrescent_control" pkg="bluecrescent_control" type="bluecrescent_control" 
        output="screen" ns="/bluecrescent"/ -->

  
  <node name="controller_spawner" pkg="controller_manager" 
        type="spawner" respawn="false"
        output="screen" ns="/bluecrescent"
        args="joint_state_controller joint_position_controller_R joint_position_controller"/> 

</launch>
